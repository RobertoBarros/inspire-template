<div class="container mx-auto flex justify-center items-center min-h-[calc(100vh-68px)]">
  <div class="card w-96 bg-base-200 shadow-2xl">
    <div class="card-body">
      <h2 class="card-title"><%= _("Enter") %></h2>
      <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" } do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
        <% end %>
        <%= f.submit _("Enter") %>
      <% end %>
      <p class="mt-10">
        <%= _("Don't have an account?") %>
        <%= link_to _("Sign up"), new_registration_path(resource_name), class: "link" %>
      </p>
      <p class="mt-5">
        <%= _("Forgot your password?") %>
        <%= link_to _("Retrieve"), new_password_path(resource_name), class: "link" %>
      </p>
    </div>
  </div>
</div>
