<div class="container mx-auto flex justify-center items-center min-h-[calc(100vh-68px)]">
  <div class="card w-96 bg-base-200 shadow-2xl">
    <div class="card-body">
      <h2 class="card-title"><%= _("Change Password") %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <%= f.submit _("Change my Password") %>
      <% end %>
    </div>
  </div>
</div>
